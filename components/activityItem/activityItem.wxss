.activity{
  margin-left: 15px;
  margin-right: 15px;
  padding-top: 10px;
  padding-left: 10px;
  padding-bottom: 10px;
  height:80px;
  border: 1px solid rgb(209, 204, 204);
  border-radius: 5px;
  display: flex;
  flex-direction: row;
}
.activity-detail{
  width: 65%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.activity-image{
  width: 35%;
  height: 100%;
  padding-right: 10px;
}
.activity-image image{
  width: 100%;
  height: 100%;
}
.activity-detail-title{
  height: 28%;
  font-size: 13px;
}
.activity-detail-date{
  height: 18%;
  font-size: 10px;
  color:  rgb(77,77,77);
  display: flex;
  align-items: center;
}
.activity-detail-place{
  height: 18%;
  font-size: 10px;
  color:  rgb(77,77,77);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.activity-detail-issuer{
  height: 18%;
  font-size: 10px;
  color:  rgb(77,77,77);
  display: flex;
  align-items: center;
}
.activity-detail-object{
  height: 18%;
  font-size: 10px;
  color:  rgb(77,77,77);
  display: flex;
  align-items: center;
}
