/* components/activityItem/activityItem.wxss */
.activity{
  margin-left: 15px;
  margin-right: 15px;
  padding-top: 10px;
  padding-left: 10px;
  padding-bottom: 10px;
  height:80px;
  border: 1px solid rgb(209, 204, 204);
  border-radius: 5px;
  display: flex;
  flex-direction: row;
}
.activity-detail{
  width: 65%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.activity-image{
  width: 35%;
  height: 100%;
  padding-right: 10px;
}
.activity-image image{
  width: 100%;
  height: 100%;
}
.activity-detail-title{
  width: 100%;
  height: 20%;
  font-size: 13px;
}
.activity-detail-position{
  width: 100%;
  height: 20%;
  font-size: 10px;
  color:  rgb(77,77,77);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.activity-detail-time{
  width: 100%;
  height: 20%;
  font-size: 9px;
  color:  rgb(77,77,77);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.activity-detail-joinSum{
  width: 100%;
  height: 20%;
  font-size: 9px;
  color:  rgb(77,77,77);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.activity-detail-issuer{
  width: 35%;
  height: 20%;
  font-size: 9px;
  color:  rgb(77,77,77);
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.activity-detail-date{
  width: 35%;
  height: 20%;
  color:  rgb(77, 77, 77);
  font-size: 9px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}