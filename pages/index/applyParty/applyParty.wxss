.applyParty{
  margin-left: 15px;
  margin-right: 15px;
  height: 100%;
}
.applyParty-title{
  height: 15px;
  margin-bottom: 3px;
}
.applyParty-input{
  height: 400px;
  border: 1px solid #BBBBBE;
}
.applyParty-input textarea{
  height: 100%;
}
.applyParty-document{
  height: 100px;
  display: flex;
  flex-direction: row;
}
.applyParty-document-add{
  width: 35%;
  display: flex;
  flex-direction: column;
}
.applyParty-document-add-image{
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.applyParty-document-add-image image{
  width: 30px;
  height: 30px;
}
.applyparty-submit{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.applyparty-submit button{
  margin-top: 10px;
  background-color: #E71111;
  color: #ffffff;

}