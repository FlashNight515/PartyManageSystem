page{
  width: 100%;
  height: 100%
}
.process{
  height: 100%;
  width: 100%;
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.process-item{
  height: 20%;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-header{
  height: 30%;
  width: 100%;
  color: #ffffff;
  background-color: #E71111;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item-footer{
  height: 70%;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.footer-left{
  width: 35%;
  height: 100%;
  border-right: 1px solid #E71111;
}
.footer-right{
  width: 65%;
  height: 100%;
  color: #101010;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.text{
  margin-top: 5px;
}