/* pages/index/vote/vote.wxss */
page{
  width: 100%;
  height: 100%;
}
.vote{
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 100%;
}
.vote-title{
  height: 15%;
  padding-top: 40rpx;
  display: flex;
  flex-direction: row;
  
}
.vote-title-label{
  width: 23%;
}
.vote-title-contain{
  width: 77%;
  height: 70%;
  border: 1px solid #BEEEEE;
  border-radius: 7px;
}
.vote-choose{
  height: 30%;
  display: flex;
  flex-direction: row;
}
.vote-choose-label{
  width: 23%;
}
.vote-choose-radio-group{
  width: 77%;
  display: flex;
  flex-direction: column;
}
.vote-choose-radio{
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.vote-note{
  height: 30%;
  display: flex;
  flex-direction: row;
}
.vote-note-label{
  width: 23%;
}
.vote-note-contain{
  width: 77%;
  height: 70%;
  border: 1px solid #BEEEEE;
  border-radius: 7px;
}
.vote-note-contain textarea{
  width: 100%;
  height: 100%;
}
.vote-submit{
  height: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.vote-submit button{
  color: #ffffff;
  background-color: #e71111;
}