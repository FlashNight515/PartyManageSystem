/* pages/index/calculator/calculator.wxss */
page{
  width: 100%;
  height: 100%;
}
.calculator{
  margin-left: 40px;
  margin-right: 40px;
  height: 100%;
}
.income-type{
  margin-top: 40px;
  height: 50px;
  display: flex;
  flex-direction: row;
}
.income-type-label{
  width: 100px;
  display: flex;
  align-items: center;
}
.income-type-picker{
  margin-left: 20px;
  display: flex;
  align-items: center;
}
.income-type-picker image{
  width: 13px;
  height: 13px;
}
.income{
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.income-label{
  width: 40%;
  display: flex;
  align-items: center;
}
.income-input{
  width: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.income-input input{
  width: 80px;
  display: flex;
  align-items: center;
  border: 1px solid #BEEEEE;
  border-radius: 7px;
}
.income-reminder{
  display: flex;
  align-items: center;
  font-size: 11px;
  color: #e71111;
}
.income-button{
  height: 90px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.income-button button{
  color: #ffffff;
  background-color: #e71111;
}
.income-show{
  height: 50px;
  display: flex;
  align-items: center;
}