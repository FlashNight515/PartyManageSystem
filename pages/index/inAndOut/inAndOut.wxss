/* pages/index/inAndOut/inAndOut.wxss */
page{
  width: 100%;
  height: 100%;
}
form{
  width: 100%;
  height: 100%;
}
.header{
  height: 60%;
}

.inout{
  margin-left: 15px;
  margin-right: 15px;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.name{
  width: 100%;
  height:50px;
  display: flex;
  flex-direction: row;
}
.labelName1{
  width: 20%;
  display: flex;
  align-items: center;
}
.labelName2{
  width: 80%;
  display: flex;
  align-items: center;
}
.labelName-contain{
  height: 70%;
  width: 100%;
  border-radius: 7px; 
  background-color: #BBBBBE;
  display: flex;
  align-items: center;
}
.belong{
  width: 100%;
  height:50px;
  display: flex;
  flex-direction: row;
}
.labelBelong1{
  width: 25%;
  display: flex;
  align-items: center;
}
.labelBelong2{
  width: 75%;
  display: flex;
  align-items: center;
  text-align: center;
}
.labelBelong-contain{
  height: 70%;
  width: 100%;
  border-radius: 7px; 
  background-color: #BBBBBE;
  display: flex;
  align-items: center;
}
.goto{
  width: 100%;
  height:50px;
  display: flex;
  flex-direction: row;
}
.labelGoto{
  width: 25%;
  display: flex;
  align-items: center;
}
.goto-picker{
  width: 75%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.goto-picker image{
  width: 10px;
  height: 10px;
}
.time{
  width: 100%;
  height:50px;
  display: flex;
  flex-direction: row;
}
.labelTime{
  width: 25%;
  display: flex;
  align-items: center;
}
.time-picker{
  width: 75%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.time-picker image{
  width: 13px;
  height: 13px;
}
.reason{
  width: 100%;
  height:50px;
  display: flex;
  flex-direction: row;
}
.reason-label{
  width: 25%;
  display: flex;
  align-items: center;
}
.reason-input{
  width: 75%;
  display: flex;
  align-items: center;
}
.reason-inputing{
  height: 70%;
  width: 100%;
  border-radius: 7px; 
  border: 1px solid #BBBBBE;
  display: flex;
  align-items: center;
}
.footer{
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.submit{
  margin-bottom: 20px;
}
.submit button{
  background-color:  #e71111;
  color: #ffffff;
}