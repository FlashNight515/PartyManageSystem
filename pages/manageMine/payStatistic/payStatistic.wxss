}
.table-item-month{
  width: 20%;
  border: 1px solid #DBDBDB;
  display: flex;
  justify-content: center;
  align-items: center;
}
.table-item-account{
  width: 20%;
  border: 1px solid #DBDBDB;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nopay{
  height: 40%;
  margin-top: 20px;
