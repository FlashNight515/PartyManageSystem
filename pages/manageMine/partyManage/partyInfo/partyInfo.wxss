page{
  width: 100%;
  height: 100%;
}
.partyInfo{
  height: 100%;
  margin-left: 15px;
  margin-right: 15px;
}
.partyInfo-items{
  height: 60%;
  display: flex;
  flex-direction: column;
}
.item{
  height: 60px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.item-label{
  width: 25%;
  
}
.item-show{
  width: 75%;
  height: 75%;
  padding-left: 5px;
  color: #ffffff;
  background-color: #837D7D;
  border-radius: 5px;
  display: flex;
  align-items: center;
}
.partyInfo-button{
  height: 35%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.partyInfo-button button{
  color: #ffffff;
  background-color: #e71111;
}