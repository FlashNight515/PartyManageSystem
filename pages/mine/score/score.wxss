/* pages/mine/score/score.wxss */
page{
  width: 100%;
  height: 100%;
}
.score{
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 100%;
}
.header{
  height: 16%;
  margin-top: 5px;
  border: 1px solid #BEEEEE;
  border-radius: 7px;
  display: flex;
  flex-direction: row;
}
.header-image{
  width: 35%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-image image{
  width: 40px;
  height: 40px;
}
.header-detail{
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.header-detail-name{
  height: 25%;
  font-size: 17px;
}
.header-detail-class{
  height: 20%;
}
.header-detail-stuNumber{
  height: 20%;
}
.container{
  height: 7%;
  margin-top: 10px;
  padding-left: 30rpx;
  border: 1px solid #BEEEEE;
  border-radius: 7px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container-score{
  color: #e71111;
  font-size: 20px;
}
.footer{
  height: 60%;
  margin-top: 10px;
  border: 1px solid #BEEEEE;
  border-radius: 7px;
  display: flex;
  flex-direction: column;
}
.footer-title{
  height: 8%;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
.line{
  height: 1px;
  width: 100%;
  background-color: #BEEEEE;
}
.footer-contain{
  height: 90%;
}
.footer-contain-item{
  height: 50px;
  display: flex;
  flex-direction: row;
}
.footer-contain-item-left{
  width: 90%;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.item-left-acTitle{

}
.item-left-acDate{
  font-size: 13px;
  color: rgb(116, 119, 119);
}
.footer-contain-item-score{
  width: 10%;
  font-size: 18px;
  display: flex;
  align-items: center;
}