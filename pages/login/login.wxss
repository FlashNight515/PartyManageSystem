page{
  width: 100%;
  height: 100%;
}
.login{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.icon{
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon image{
  width: 65px;
  height: 65px;
}
.input{
  height: 25%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.picker{
  width: 80%;
  height: 45px;
  padding-left: 3px;
  background-color: #837D7D;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.picker-show{
  width: 90%;
  color: #ffffff;
}
.picker-image{
  width: 10%;
}
.picker-image image{
  width: 18px;
  height: 18px;
}
.input-number{
  width: 80%;
  height: 45px;
  padding-left: 3px;
  background-color: #837D7D;
  border-radius: 10px;
  display: flex;
  align-items: center;
}
.input-password{
  width: 80%;
  height: 45px;
  padding-left: 3px;
  background-color: #837D7D;
  border-radius: 10px;
  display: flex;
  align-items: center;
}
.button{
  height: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.button-detail{
  margin-top: 10px;
}
.button-detail button{
  background-color: #E71111;
  color: #ffffff;
}
.button-register{
  margin-top: 10px;
  text-decoration: underline;
}