page{
  width: 100%;
  height: 100%;
}
.learn{
  margin-left: 15px;
  margin-right: 15px;
}
.learn-title{
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  
}
.title-left{
  height: 20px;
  color: #ffffff;
  background-color: #e71111;
  border-radius: 5px;
  display: flex;
  align-items: center;
}
.title-right{
  height: 80%;
  width: 80px;
  display: flex;
  flex-direction: column;
}
.title-right-icon{
  display: flex;
  justify-content: center;
}
.title-right-icon image{
  width: 25px;
  height: 25px;
}
.title-right-text{
  font-size: 12px;
  color: rgb(157, 165, 165);
  display: flex;
  justify-content: center;
}
.learn-contain{
  height: 200px;
  border: 1px solid #beeeee;
  border-radius: 5px;
}
.learn-contain-scrollView{
  height: 100%;
}
.learn-contain-item{
  height:25px;
  display: flex;
  flex-direction: row;
}
.learn-contain-item-image{
  width: 10%;
  height: 100%;
  padding-left: 10px;
  display: flex;
  align-items: center;
}
.learn-contain-item-image image{
  width: 15px;
  height: 15px;
}
.learn-contain-item-name{
  width: 90%;
  display: flex;
  align-items: center;
}